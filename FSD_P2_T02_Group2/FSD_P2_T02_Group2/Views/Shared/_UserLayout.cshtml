                        <path d="M10.1816 25.2383C11.7405 29.0238 12.8795 35.1886 12.8795 38.1277C12.8795 42.9023 27.6987 43.199 27.6987 50.8886C27.6987 57.4718 33.4883 59.4247 35.7305 69.3498C36.9278 74.6495 47.1589 71.9938 55.8665 67.8792C58.8789 66.4558 58.6867 57.0389 62.4277 55.4356C66.1686 53.8323 67.8576 51.5894 71.4776 53.5125C75.0975 55.4356 83.4899 52.4919 84.826 50.8886C86.4961 48.8845 85.1599 39.5321 92.5083 36.8599C99.8566 34.1878 96.4995 31 98.9995 26.5" stroke="black" stroke-width="1.5" />
                    </svg>
                    @if (Context.Session.GetString("Role") == "User")
                    {
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item usernav ml-auto" style="padding:10px;">
                                    <a class="nav-link" asp-action="General" asp-controller="User">Chat Group</a>
                                </li>
                                <li class="nav-item usernav" style="padding:10px;">
                                    <a class="nav-link" asp-action="Talents" asp-controller="User">Talent Recognition</a>
                                </li>
                                <li class="nav-item usernav" style="padding:10px;">
                                    <a class="nav-link">Counselling</a>
                                </li>
                                <li class="nav-item usernav" style="padding:10px;">
                                    <a class="nav-link" asp-action="Account" asp-controller="User">Account</a>
                                </li>
                                <li class="nav-item usernav" style="padding:10px;">
                                    <a class="nav-link" asp-action="Index" asp-controller="Home">Log Out</a>
                                </li>
                            </ul>
                        </div>
                    }
                    @if (Context.Session.GetString("Role") == "Admin")
                    {
                        <partial name="~/Views/Shared/_AdminNavBar.cshtml" />

                    }
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>