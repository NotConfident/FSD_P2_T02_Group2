@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ukiyo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <style>
        body {
            font-family: 'Josefin Sans'
        }

        .usernav {
            transition: background-color linear;
        }

            .usernav a {
                transition: color linear;
            }

            .usernav a {
                color: black;
                padding-top: 30px;
            }

                .usernav:hover, .usernav a:hover {
                    color: white;
                    background-color: #0F89AE;
                }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@200;500&display=swap" rel="stylesheet">
</head>
<body id="Site">
    <div class="Site-content">
        <header class="text">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="padding-top:0px">
                <div class="container">
                    <svg width="57" height="74" viewBox="0 0 113 74" fill="none" xmlns="http://www.w3.org/2000/svg" style="padding-top:30px">
