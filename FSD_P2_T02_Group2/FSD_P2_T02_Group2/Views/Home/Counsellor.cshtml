@model FSD_P2_T02_Group2.Models.Counsellor;
@{
    Layout = "_CommonNavbar";
    ViewData["Title"] = "Become a Counsellor";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Become a Counsellor</title>
    <link href="~/css/counsellor.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@200;500&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css">
    <link rel="stylesheet" href="~/css/material-design-iconic-font.min.css">
</head>

<body class="form-v4">
    <div class="page-content" style="background: url(../images/Login.png);background-repeat:no-repeat; background-size:cover">
        <div class="form-v4-content">
            <div class="form-detail">
                <form method="post">
                    <h2>Become a Counsellor</h2>
                    <div class="form-group">
                        <div class="form-row">
                            <label for="full_name">Full Name</label>
                            <input type="text" name="name" class="input-text" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <label for="your_email">Email</label>
                            <input type="email" name="email" class="input-text" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <label for="phone_number">Phone Number</label>
                            <input type="text" name="number" class="input-text" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <label for="image">Upload Your Profile Picture</label>
                            <input type="file" class="input-text" id="myFile" name="filename" onchange="getBase64Image(this)">
                            <input type="hidden" value="" id="Base64Image" name="Base64Image" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <label for="image">Upload Your Certification</label>
                            <input type="file" class="input-text" id="myFile" name="filename" onchange="getBase64Certificate(this)">
                            <input type="hidden" value="" id="Base64Certificate" name="Base64Certificate" />
                        </div>
                    </div>
                    <div class="form-row-last">
                        <input type="submit" name="submit" class="submit" value="Submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        document.getElementById("common_navbar").classList.remove("fixed-top");

        function getBase64Image(element) {
            var file = element.files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                localStorage.setItem("Base64Image", reader.result);
            }
            console.log(localStorage.getItem("Base64Image"));

            reader.readAsDataURL(file);
            document.getElementById("Base64Image").value = localStorage.getItem("Base64Image");
        }

        function getBase64Certificate(element) {
            var file = element.files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                localStorage.setItem("Base64Certificate", reader.result);
            }
            console.log(localStorage.getItem("Base64Certificate"));

            reader.readAsDataURL(file);
            document.getElementById("Base64Certificate").value = localStorage.getItem("Base64Certificate");
        }
    </script>
</body>
</html>